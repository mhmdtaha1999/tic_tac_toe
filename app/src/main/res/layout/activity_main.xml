<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/glh1"
        android:background="@drawable/tictactoeboard"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tic Tac Toe"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="@id/title_layout"
            app:layout_constraintEnd_toEndOf="@id/title_layout"
            app:layout_constraintBottom_toBottomOf="@id/title_layout"
   />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txtTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/glh1"
        app:layout_constraintEnd_toEndOf="@id/glv2"
        app:layout_constraintStart_toStartOf="@id/glv1"
        app:layout_goneMarginTop="45dp"
        android:text="Show Turn"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/countplayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player X"
        android:textSize="30dp"
        android:textColor="#00FF00"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtTurn"
        app:layout_constraintEnd_toEndOf="@id/glv2"
        app:layout_constraintStart_toEndOf="@id/countplayer2"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Player O"
        android:textColor="#FF0000"
        android:id="@+id/countplayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTurn"
        app:layout_constraintStart_toStartOf="@id/glv1"
        app:layout_constraintEnd_toStartOf="@id/countplayer1"
        android:layout_marginTop="20dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>

    <androidx.constraintlayout.widget.Guideline
    android:id="@+id/glv2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.9"/>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:background="@drawable/boardshape"
        android:columnCount="3"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="@id/glh3"
        app:layout_constraintEnd_toEndOf="@id/glv2"
        app:layout_constraintStart_toStartOf="@id/glv1"
        app:layout_constraintTop_toTopOf="@id/glh2">

        <Button
            android:id="@+id/b1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>

        <Button
            android:id="@+id/b9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="3dp"
            android:textSize="40dp">

        </Button>


    </GridLayout>

    <ImageButton
        android:id="@+id/imgbtnreset"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/reset"
        app:layout_constraintBottom_toTopOf="@+id/btnreset"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.208" />

    <Button
        android:id="@+id/btnreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/glv2"
        app:layout_constraintStart_toStartOf="@id/glv1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/imgbtnreset"
        android:text="Reset All"
        android:textAllCaps="false"/>



</androidx.constraintlayout.widget.ConstraintLayout>